<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/public/css/styles.css" />
</head>
<body>
  <h1><%= title %> - Itinerary</h1>
  <p><strong>Name:</strong> <%= name %></p>
  <p><strong>From:</strong> <%= source %> to <%= destination %></p>
  <p><strong>Members:</strong> <%= members %></p>

  <% days.forEach((day, i) => { %>
    <h2>Day <%= i + 1 %>: <%= day.date %></h2>
    <h3>Morning</h3>
    <ul>
      <% day.activities.morning.forEach(act => { %>
        <li><strong><%= act.time %></strong>: <%= act.description %></li>
      <% }); %>
    </ul>
    <h3>Afternoon</h3>
    <ul>
      <% day.activities.afternoon.forEach(act => { %>
        <li><strong><%= act.time %></strong>: <%= act.description %></li>
      <% }); %>
    </ul>
    <h3>Evening</h3>
    <ul>
      <% day.activities.evening.forEach(act => { %>
        <li><strong><%= act.time %></strong>: <%= act.description %></li>
      <% }); %>
    </ul>
  <% }); %>

  <% if (hotels && hotels.length > 0) { %>
    <h2>Hotel Bookings</h2>
    <ul>
      <% hotels.forEach(hotel => { %>
        <li>
          <strong><%= hotel.city %></strong>: <%= hotel.hotelName %>,
          Check-in: <%= hotel.checkIn %>,
          Check-out: <%= hotel.checkOut %>,
          Nights: <%= hotel.nights %>
        </li>
      <% }); %>
    </ul>
  <% } %>

  <% if (extraActivities && extraActivities.length > 0) { %>
    <h2>Extra Activities</h2>
    <ul>
      <% extraActivities.forEach(act => { %>
        <li><strong><%= act.time %></strong>: <%= act.description %></li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
